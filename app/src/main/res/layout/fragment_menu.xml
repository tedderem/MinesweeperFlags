<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tacoma.uw.erik.minesweeperflags.MenuFragment">


    <Button
        android:id="@+id/new_game_button"
        android:text="@string/new_game_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your Games"
        android:id="@+id/game_list_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_below="@+id/game_list_label"
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_game_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sync"
        android:layout_alignBottom="@+id/game_list_label"
        android:layout_toRightOf="@+id/game_list_label"
        android:layout_toEndOf="@+id/game_list_label"
        android:src="@android:drawable/stat_notify_sync" />

</RelativeLayout>
